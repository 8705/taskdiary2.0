<div id="todoapp" class="container-fluid">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">TaskDiary</a>
          </div>
      </div>
    </nav>

    <div class="row">
      <div id="addTask" class="col-md-8 col-md-offset-3 form-inline">
        <input id="task_status" type="checkbox" value="1">
        <input id="task_title" class="form-control input-lg" type="text" placeholder="What needs to be done?">
      </div>
    </div>
    <div id="content" class="row">
      <div id="today" class="col-md-5 col-md-offset-3">
        <h2>tasks</h2>
        <ul id="todayTasks" class="list-group"></ul>
      </div>
    </div>
    <div id="footer" class="row"></div>
  </div>

<script type="text/template" id="template-header"></script>
  <script type="text/template" id="item-template">
  <div class="todo {{= done_at !== null ? 'done':''}}">
    <div class="display" title="ダブルクリックして編集...">
      {{if (status !== 1) { }}
        <input class="check" type="checkbox" {{= done_at !== null ? 'checked="checked"':''}} />
      {{ } }}
      <div class="todo-content">{{- title }}</div><span>{{- done_at}}</span>
      <span class="todo-destroy glyphicon glyphicon-remove-circle"></span>
    </div>
    <input class="edit" type="text" value="{{- title }}" />
  </div>
  </script>
  <script type="text/template" id="template-footer"></script>