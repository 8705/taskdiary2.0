<div class="todo {{#if is_done }} done {{/if}}">
	<div class="display" title="ダブルクリックして編集...">
	  {{#if status}}
	    <input class="check" type="checkbox" {{#if is_done }} checked="checked"{{/if}} />
	  {{/if}}
	  <div class="todo-content">{{title}}</div>{{#if is_done }}{{done_at}}{{/if}}
	  <span class="todo-destroy glyphicon glyphicon-remove-circle"></span>
	</div>
	<input class="edit" type="text" value="{{title}}" />
</div>