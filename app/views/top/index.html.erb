<div id="todoapp" class="container-fluid">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">TaskDiary</a>
          </div>
      </div>
    </nav>

    <div class="row">
      <div id="addTask" class="col-md-8 col-md-offset-2 form-inline">
        <%= form_for(@form_param, url: :tasks, remote: true) do |f| %>
          <%= f.text_field :title, id: 'new-todo', class: 'form-control input-lg', placeholder: 'What needs to be done?' %>
          <%= f.submit 'Go', class: 'input-lg btn btn-default' %>
        <% end %>
      </div>
    </div>
    <div id="content" class="row">
      <div id="today" class="col-md-4 col-md-offset-2">
        <h2>Todays</h2>
        <ul id="todayTasks" class="list-group"></ul>
      </div>
      <div id="future" class="col-md-4">
        <h2>Futures</h2>
        <ul id="futureTasks" class="list-group"></ul>
      </div>
    </div>
    <div id="footer" class="row"></div>
  </div>

<script type="text/template" id="template-header"></script>
  <script type="text/template" id="item-template">
  <div class="todo {{= done ? 'done':''}}">
    <div class="display" title="ダブルクリックして編集...">
      <input class="check" type="checkbox" {{= done ? 'checked="checked"':''}} />
      <div class="todo-content">{{- title }}</div>
      <span class="todo-destroy glyphicon glyphicon-remove-circle"></span>
    </div>
    <input class="edit" type="text" value="{{- title }}" />
  </div>
  </script>
  <script type="text/template" id="template-footer"></script>